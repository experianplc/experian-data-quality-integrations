{
  "types": [
    "intern",
    "autocompletion"
  ],

  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "es2015"
    ],

    "baseUrl": ".",
    "paths": {
      "utils": ["utils/*"]
     },
    "target": "es5",
    "module": "commonjs",
    "checkJs": true,
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true
  },

  "include": [
    "ccb/src/**/*"
  ],

  "exclude": ["node_modules/**/*",
	"peoplesoft/src/**/*",
    "peoplesoft/tests/**/*",
	"ccb/tests/**/*",
    "magento/src/**/*",
    "magento/tests/**/*",
    "utils/**/*"
    ],
  "compileOnSave": false
}
