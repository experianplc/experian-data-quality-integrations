{
  "functionalSuites": "functional/**/*.js",
  "filterErrorStack": true,

  "capabilities": {
    "acceptInsecureCerts": true
  },

  "environments": [
    {
      "browserName": "chrome",
      "chromeOptions": {
        "args": [
          "window-size=1920,1080",
          "disable-gpu"
        ]

      }
    }
  ],

  "plugins": ["reporters/nunit3.js"],

  "tunnelOptions": {
    "drivers": [
      {
        "name": "chrome",
        "version": "2.37"
      }
    ]
  }
}

