{
  "functionalSuites": "tests/functional/**/*.js",
  "filterErrorStack": true,

  "capabilities": {
    "acceptInsecureCerts": true
  },

  "environments": [
    {
      "fixSessionCapabilities": "no-detect",
      "browserName": "chrome",
      "goog:chromeOptions": {
        "args": [
          //"headless",
          "window-size=1920,1080",
          "disable-gpu",
          "disable-extensions"
        ]

      },
      "chromeOptions": {
        "args": [
          //"headless",
          "window-size=1280,960",
          "disable-gpu",
          "disable-extensions"
        ]

      }
    }
  ],

  "plugins": ["tests/reporters/nunit3.js"]
}

